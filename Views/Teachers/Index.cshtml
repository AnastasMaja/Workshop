@model IEnumerable<Workshop.Models.Teacher>

@{
    ViewData["Title"] = "Наставници";
}

<h1>Наставници</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Додај нов наставник</a>
</p>

<form asp-action="Index" method="get" class="mb-4">
    <div class="form-row">
        <div class="form-group col-md-3">
            <label>Име/Презиме:</label>
            <input type="text" name="searchName" class="form-control" value="@ViewData["CurrentFilterName"]" placeholder="Внесете име или презиме" />
        </div>
        <div class="form-group col-md-3">
            <label>Степен:</label>
            <input type="text" name="searchDegree" class="form-control" value="@ViewData["CurrentFilterDegree"]" placeholder="Внесете степен" />
        </div>
        <div class="form-group col-md-3">
            <label>Академски ранг:</label>
            <input type="text" name="searchRank" class="form-control" value="@ViewData["CurrentFilterRank"]" placeholder="Внесете ранг" />
        </div>
        <div class="form-group col-md-3 align-self-end">
            <button type="submit" class="btn btn-primary">Филтрирај</button>
            <a asp-action="Index" class="btn btn-secondary">Ресетирај</a>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Име</th>
            <th>Презиме</th>
            <th>Степен</th>
            <th>Академски ранг</th>
            <th>Канцеларија</th>
            <th>Датум на вработување</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Degree</td>
                <td>@item.AcademicRank</td>
                <td>@item.OfficeNumber</td>
                <td>@item.HireDate?.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Уреди</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Избриши</a>
                </td>
            </tr>
        }
    </tbody>
</table>
